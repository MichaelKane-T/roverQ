{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RoverCommand",
  "description": "Controller to rover command contract",
  "type": "object",
  "required": [
    "timestamp",
    "mode",
    "throttle",
    "steering"
  ],
  "properties": {
    "timestamp": {
      "type": "integer",
      "description": "Unix time in milliseconds"
    },
    "mode": {
      "type": "string",
      "enum": [
        "MANUAL",
        "AUTO",
        "EMERGENCY_STOP"
      ]
    },
    "throttle": {
      "type": "number",
      "minimum": -1.0,
      "maximum": 1.0,
      "description": "Normalized throttle command"
    },
    "steering": {
      "type": "number",
      "minimum": -1.0,
      "maximum": 1.0,
      "description": "Normalized steering command"
    }
  },
  "additionalProperties": false
}
